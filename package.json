{
	"name": "radish-language-extension",
	"description": "Radish Language Extension with Node.JS",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/teo67/RadishExtension"
	},
	"publisher": "teo67",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.63.0"
	},
	"activationEvents": [
		"onLanguage:radish"
	],
	"main": "./client/src/extension.js",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Configuration",
			"properties": {
				"radishLanguageServer.maxNumberOfProblems": {
					"scope": "resource",
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"radishLanguageServer.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}, 
		"languages": [{
            "id": "radish",
            "aliases": ["radish", "radish"],
            "extensions": [".rdsh"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "radish",
            "scopeName": "source.radish",
            "path": "./radish.tmLanguage.json"
        }]
	},
	"devDependencies": {
		"@types/node": "^14.17.0"
	}
}
